{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false, // Set to false if you're not using JS files to enforce type safety
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "public/*": [
        "./public/*"
      ],
      "@payload-config": [
        "./src/payload.config.ts"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts", // Next.js auto-generated types
    "**/*.ts", // TypeScript files
    "**/*.tsx", // TypeScript React files
    ".next/types/**/*.ts" // Next.js types
, "../src/components/AnimatedStats.tsx"],
  "exclude": [
    "node_modules"
  ] // Excludes node_modules from compilation
}
